<%= form_with url: login_path, method: :post, class: 'login-form', local: true do |f| %>
  <div class="form-group">
    <%= f.label :email, class: 'form-check-label' %>
    <%= f.text_field :email, class: "form-control", id: "exampleInputEmail1", placeholder: "Enter email" %>
  </div>
  <div class="form-group">
    <%= f.label "PASSWORD", class: "form-check-label" %>
    <%= f.text_field :password, class: 'form-control', id: "exampleInputPassword1", placeholder: "Password" %>
  </div>
  <%= f.submit 'Log In', class: "btn btn-primary" %>
<% end %>
