<div class='header'>
  <h1>Current Users Watching Great Movies</h1>
</div>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class ='users'>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.name, user %></td>
        <td><%= button_to "Add User", user_friends_path(current_user, user), class: "users-#{user.id}", method: :post %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
